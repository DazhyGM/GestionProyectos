<Window x:Class="GestionProyectos.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionProyectos.Views"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Iniciar Sesión" 
        Height="500" 
        Width="500"
        ResizeMode="CanMinimize"
        Background="#F5F5F5">
    <Grid Margin="0,0,0,-32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Background="#0078D7" Height="80">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Iniciar Sesión" 
                          FontSize="24" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Contenido -->
        <StackPanel Grid.Row="1" Margin="40,30,40,30">

            <TextBlock Text="Correo Electrónico" 
                      FontWeight="SemiBold" 
                      Margin="0,0,0,5"/>
            <TextBox x:Name="txtCorreo" 
                    Height="35" 
                    FontSize="14" 
                    Padding="8"
                    BorderBrush="#CCC"
                    Margin="0,0,0,15"/>

            <TextBlock Text="Contraseña" 
                      FontWeight="SemiBold" 
                      Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtContrasena" 
                        Height="35" 
                        FontSize="14" 
                        Padding="8"
                        BorderBrush="#CCC"
                        Margin="0,0,0,20"/>

            <!-- Mensaje -->
            <TextBlock x:Name="lblMensaje"
                       Text=""
                       TextAlignment="Center"
                       FontWeight="Bold"
                       Margin="0,0,0,15"/>

            <!-- Botón Iniciar Sesión -->
            <Button Content="Iniciar Sesión" 
                    Height="40"
                    Background="#0078D7"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="15"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnIniciarSesion"
                    Margin="0,0,0,10">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Botón Regresar -->
            <Button Content="Regresar" 
                    Height="40"
                    Background="#6C757D"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="15"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnRegresar_Click"
                    Margin="0,0,0,20">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="5">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A6268"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Separador -->
            <Border Height="1" Background="#DDD" Margin="0,0,0,15"/>

            <!-- Enlace a Registro -->
            <StackPanel Orientation="Horizontal" 
                       HorizontalAlignment="Center">
                <TextBlock Text="¿No tienes cuenta? " 
                          FontSize="14" 
                          Foreground="#666"
                          VerticalAlignment="Center"/>
                <Button x:Name="btnIrRegistro" 
                       Content="Regístrate aquí" 
                       Background="Transparent"
                       Foreground="#0078D7"
                       FontSize="14"
                       FontWeight="SemiBold"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="BtnIrRegistro_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#005A9E"/>
                                    <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>