<Window x:Class="GestionProyectos.Views.GestionTareasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Tareas" Height="450" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Tareas del Proyecto" FontSize="20" FontWeight="Bold" Foreground="#2196F3" Margin="0,0,0,20"/>

        <Border Grid.Row="1" Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Descripción de la tarea:"/>
                    <TextBox x:Name="txtNombreTarea" Height="30" Padding="5"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Encargado:"/>
                    <TextBox x:Name="txtEncargado" Height="30" Padding="5"/>
                </StackPanel>

                <Button Grid.Column="2" Content="Agregar" Width="80" Height="30" VerticalAlignment="Bottom"
                        Background="#4CAF50" Foreground="White" FontWeight="Bold" BorderThickness="0"
                        Click="BtnAgregarTarea_Click"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="2">
            <ItemsControl x:Name="listaTareas">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" IsChecked="{Binding Completada}" 
                                          VerticalAlignment="Center" Margin="0,0,15,0"
                                          Checked="CheckBox_CheckChanged" Unchecked="CheckBox_CheckChanged"
                                          Tag="{Binding IdTarea}">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                                    </CheckBox.LayoutTransform>
                                </CheckBox>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding NombreTarea}" FontSize="14" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Encargado, StringFormat=Encargado: {0}}" FontSize="12" Foreground="#777"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="12" FontWeight="Bold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Pendiente"/>
                                            <Setter Property="Foreground" Value="#FF9800"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Completada}" Value="True">
                                                    <Setter Property="Text" Value="Completada"/>
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>