<Window x:Class="GestionProyectos.Views.GestionTareasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Tareas" Height="956" Width="631"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <TextBlock Text="Tareas del Proyecto" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="#2196F3" 
                   Margin="0,0,0,20"/>


        <Border Grid.Row="1" Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Descripción de la tarea:"/>
                    <TextBox x:Name="txtNombreTarea" Height="30" Padding="5"/>
                </StackPanel>


                <StackPanel Grid.Column="1" Margin="10">
                    <TextBlock Text="Encargado del Proyecto" FontWeight="Bold"/>

                    <TextBox x:Name="txtDocumentoEncargado"
                             Width="250"
                             Margin="0 5 0 0"
                             TextChanged="txtDocumentoEncargado_TextChanged"/>

                    <ListBox x:Name="lstColaboradores"
                             Visibility="Collapsed"
                             Height="120"
                             SelectionChanged="lstColaboradores_SelectionChanged"
                             DisplayMemberPath="NombreCompleto"/>

                    <TextBox x:Name="txtNombreEncargado"
                             Width="250"
                             IsReadOnly="True"
                             Margin="0 5 0 0"/>
                </StackPanel>

                <Button Grid.Column="2" Content="Agregar" Width="80" Height="30" 
                        VerticalAlignment="Bottom"
                        Background="#4CAF50" Foreground="White" FontWeight="Bold" 
                        BorderThickness="0"
                        Click="BtnAgregarTarea_Click"/>
            </Grid>
        </Border>


        <ScrollViewer Grid.Row="2">
            <ItemsControl x:Name="listaTareas">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" BorderBrush="#DDD" BorderThickness="0,0,0,1" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" IsChecked="{Binding Completada}" 
                                          VerticalAlignment="Center" Margin="0,0,15,0"
                                          Checked="CheckBox_CheckChanged" 
                                          Unchecked="CheckBox_CheckChanged"
                                          Tag="{Binding IdTarea}">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                                    </CheckBox.LayoutTransform>
                                </CheckBox>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding NombreTarea}" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding EncargadoId, StringFormat=Encargado: {0}}" 
                                               FontSize="12" 
                                               Foreground="#777"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" VerticalAlignment="Center" FontSize="12" FontWeight="Bold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Pendiente"/>
                                            <Setter Property="Foreground" Value="#FF9800"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Completada}" Value="True">
                                                    <Setter Property="Text" Value="Completada"/>
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>


        <Border Grid.Row="3" Background="#EEEEEE" Padding="15" CornerRadius="5" Margin="0,20,0,0">
            <StackPanel>

                <TextBlock Text="Colaboradores del Proyecto" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#3F51B5"
                           Margin="0 0 0 15"/>


                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">

                    <Grid Width="250" Height="28">
                        <TextBox x:Name="txtBuscarColaborador"
                                 Padding="5"
                                 TextChanged="TxtBuscarColaborador_TextChanged"/>

                        <TextBlock x:Name="PlaceholderBuscar"
                                   Text="Buscar por nombre o documento"
                                   Foreground="Gray"
                                   Margin="8,4,0,0"
                                   IsHitTestVisible="False"/>
                    </Grid>

                    <Button Content="Buscar"
                            Width="90"
                            Margin="10 0 0 0"
                            Background="#2196F3"
                            Foreground="White"
                            Click="BtnBuscarColaborador_Click"/>
                </StackPanel>


                <ListView x:Name="lstColaboradoresDisponibles"
                          Height="120"
                          Margin="0 0 0 10">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Documento" DisplayMemberBinding="{Binding NumeroDocumento}" Width="120"/>
                            <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding Nombre}" Width="120"/>
                            <GridViewColumn Header="Apellido" DisplayMemberBinding="{Binding Apellido}" Width="120"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Button Content="Agregar colaborador seleccionado"
                        Width="260"
                        Height="30"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0 0 0 20"
                        Click="BtnAgregarColaborador_Click"/>

                <Separator/>

                <TextBlock Text="Colaboradores Agregados:" 
                           FontSize="16" 
                           FontWeight="Bold"
                           Margin="0 15 0 10"/>

                <ListView x:Name="lstColaboradoresProyecto"
                          Height="150">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Documento" DisplayMemberBinding="{Binding NumeroDocumento}" Width="120"/>
                            <GridViewColumn Header="Nombre" DisplayMemberBinding="{Binding Nombre}" Width="120"/>
                            <GridViewColumn Header="Apellido" DisplayMemberBinding="{Binding Apellido}" Width="120"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Button Content="Eliminar colaborador seleccionado"
                        Width="260"
                        Height="30"
                        Background="#F44336"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0 10 0 0"
                        Click="BtnEliminarColaborador_Click"/>

            </StackPanel>
        </Border>

    </Grid>
</Window>
