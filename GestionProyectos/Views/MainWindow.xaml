<Window x:Class="GestionProyectos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Proyectos" 
        Height="700" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center">


            <Ellipse Width="120" 
                     Height="120" 
                     Fill="#2196F3"
                     Margin="0,0,0,20"/>

            <TextBlock Text="Gestión de Proyectos" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="#2196F3"
                      HorizontalAlignment="Center"/>

            <TextBlock Text="Sistema de gestion de proyectos, VADAKE" 
                      FontSize="14" 
                      Foreground="#666"
                      HorizontalAlignment="Center"
                      Margin="0,5,0,0"/>
        </StackPanel>


        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    Margin="50,0,50,30">

            <Button x:Name="btnIniciarSesion" 
                    Content="Iniciar Sesión" 
                    Height="50" 
                    FontSize="16" 
                    FontWeight="Bold"
                    Background="#2196F3" 
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BtnIniciarSesion_Click"
                    Margin="0,0,0,15"/>

            <Button x:Name="btnRegistrarse" 
                    Content="Registrarse" 
                    Height="50" 
                    FontSize="16" 
                    FontWeight="Bold"
                    Background="White" 
                    Foreground="#2196F3"
                    BorderThickness="2"
                    BorderBrush="#2196F3"
                    Cursor="Hand"
                    Click="BtnRegistrarse_Click"/>
        </StackPanel>
    </Grid>
</Window>