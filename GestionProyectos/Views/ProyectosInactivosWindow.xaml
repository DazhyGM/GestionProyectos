<Window x:Class="GestionProyectos.Views.ProyectosInactivosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Proyectos Inactivos"
        Height="748"
        Width="1175"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#2196F3" BorderBrush="#1976D2" BorderThickness="0,0,0,3">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="40" Height="40" Fill="White" Margin="0,0,15,0"/>
                    <TextBlock Text="Gestión de Proyectos"
                              FontSize="22"
                              FontWeight="Bold"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                    <Button 
                        Content="Volver"
                            Background="#9C27B0"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Padding="20,10"
                            Margin="0,0,15,0"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnVolver_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#7B1FA2"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Border Background="White" CornerRadius="20" Padding="15,8" Margin="0,0,15,0">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="30" Height="30" Fill="#FF9800" Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtUsuarioNombre"
                                      Text="Usuario"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Foreground="#333"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <Button Content="Cerrar Sesión"
                            Background="#F44336"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Padding="20,10"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnCerrarSesion_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="5"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#D32F2F"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1"
               Background="White"
               CornerRadius="10"
               Margin="20"
               Padding="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Proyectos Inactivos"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#9C27B0"
                           Margin="0,0,0,15"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="listaProyectosI">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>

                                
                                <Border Background="#F9F9F9"
                                       CornerRadius="8"
                                       Padding="20"
                                       Margin="0,0,0,15"
                                       BorderBrush="#E0E0E0"
                                       BorderThickness="1">

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Nombre}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       Foreground="#333"/>

                                        </Grid>

                                        <TextBlock Grid.Row="1"
                                                  Text="{Binding Descripcion}"
                                                  FontSize="14"
                                                  Foreground="#666"
                                                  TextWrapping="Wrap"
                                                  Margin="0,10,0,10"/>

                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Center">
                                                <TextBlock Text="Inicio: "
                                                  FontWeight="SemiBold"
                                                  Foreground="#666"
                                                  FontSize="12"/>
                                                <TextBlock Text="{Binding FechaInicio, StringFormat=dd/MM/yyyy}"
                                                  Foreground="#666"
                                                  FontSize="12"
                                                  Margin="0,0,20,0"/>
                                                <TextBlock Text="Fin: "
                                                  FontWeight="SemiBold"
                                                  Foreground="#666"
                                                  FontSize="12"/>
                                                <TextBlock Text="{Binding FechaFin, StringFormat=dd/MM/yyyy}"
                                                  Foreground="#666"
                                                  FontSize="12"/>
                                            </StackPanel>
                                            <Button Grid.Column="1"
                                                Content="Activar"
                                                Background="#FF9800"
                                                Foreground="White"
                                                Padding="15,5"
                                                Margin="0,5,0,0"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                FontSize="12"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right"
                                                Tag="{Binding Id}"
                                                Click="BtnActivar_Click"/>
                                        </Grid>
                                    </Grid>
                                </Border>

                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

            </Grid>
        </Border>

    </Grid>
</Window>
